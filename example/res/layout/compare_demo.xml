<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:typeset="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/compare_demo_textview"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:padding="24sp"
        android:textColor="#80cc0000"
        android:textSize="14sp"/>

    <org.kbsriram.android.typesetview.TypesetView
        android:id="@+id/compare_demo_typesetview_a"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:padding="24sp"
        typeset:typeColor="#900099cc"
        typeset:typeSize="14sp"
        typeset:typeMaximumLineStretch="0px"
        typeset:typeMaximumGlueExpansionRatio="1.0001"/>

  </FrameLayout>
</ScrollView>
