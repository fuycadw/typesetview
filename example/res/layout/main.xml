<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:typeset="http://schemas.android.com/apk/res-auto"
    android:background="#fffffff0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <org.kbsriram.android.example.MarginTypesetView
      android:id="@+id/typesetview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="24sp"
      typeset:typeColor="#ff202020"
      typeset:typeSize="8sp"
      typeset:typeMaximumLineStretch="48sp"
      typeset:typeMaximumGlueExpansionRatio="1.5"/>
</ScrollView>
