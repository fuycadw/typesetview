<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:typeset="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ViewFlipper
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inAnimation="@anim/fade_in"
      android:outAnimation="@anim/fade_out"
      android:autoStart="true"
      android:flipInterval="3000">

    <org.kbsriram.android.typesetview.TypesetView
        android:id="@+id/glue_demo_typesetview_a"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:padding="24sp"
        typeset:typeColor="#ff303030"
        typeset:typeSize="14sp"
        typeset:typeMaximumLineStretch="0px"
        typeset:typeMaximumGlueExpansionRatio="1.0001"/>

    <org.kbsriram.android.typesetview.TypesetView
        android:id="@+id/glue_demo_typesetview_b"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:padding="24sp"
        typeset:typeColor="#ff303030"
        typeset:typeSize="14sp"/>

    <org.kbsriram.android.typesetview.TypesetView
        android:id="@+id/glue_demo_typesetview_c"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:padding="24sp"
        typeset:typeColor="#ff303030"
        typeset:typeSize="14sp"
        typeset:typeMaximumLineStretch="72sp"
        typeset:typeMaximumGlueExpansionRatio="1.4"/>

  </ViewFlipper>
</ScrollView>
